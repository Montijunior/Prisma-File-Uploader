<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="bg-gray-50">
    <%- include("./partials/nav.ejs") %>
    <!-- NAV ABOVE -->

    <!-- APP BODY -->
    <section class="p-6 mt-7">
      <h1 class="text-3xl text-center font-bold text-slate-700 mt-5 mb-5">
        <%= title %>
        <br />
        <span class="text-xl"> Created: <%= folder.createdAt %></span>
      </h1>
    </section>
    <section class="-mt-7">
      <div class="max-w-xs p-3 mx-auto flex space-x-2">
        <!-- Edit Folder -->
        <div class="flex-1">
          <button
            id="editButton"
            class="w-full py-2 px-3 border border-slate-600 text-slate-600 hover:bg-slate-50 hover:text-slate-700 font-semibold rounded-lg transition-colors"
          >
            Edit
          </button>
        </div>
        <!-- Delete Folder -->
        <form
          action="/folder/<%= folder.id %>/delete"
          method="post"
          class="flex-1"
        >
          <input type="hidden" name="deleteFolder" value="<%= folder.id %>" />
          <button
            type="submit"
            class="w-full py-2 px-3 border-none font-medium text-gray-white rounded-lg bg-red-700 hover:bg-red-800 text-white transition-colors"
          >
            Delete
          </button>
        </form>
      </div>

      <!-- Edit modal -->
      <form
        id="editForm"
        action="/folder/<%= folder.id %>/edit"
        method="post"
        class="mt-3 mb-3 max-w-sm mx-auto bg-white px-4 py-3 transition rounded-lg shadow-lg hidden"
      >
        <label for="editName" class="block text-sm font-medium text-gray-700"
          >Folder Name</label
        >
        <input
          type="text"
          id="editName"
          placeholder="<%= folder.name %>"
          value="<%= folder.name %>"
          name="editName"
          class="mt-1 w-full border rounded-lg py-2 px-3 focus:outline-none bg-slate-50 focus:ring-blue-500 focus:border-blue-500 placeholder:text-slate-600 text-slate-600"
          required
        />

        <!-- Buttons -->
        <div class="grid grid-cols-2 gap-x-2 my-2">
          <button
            type="button"
            id="cancelEdit"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400"
          >
            Cancel
          </button>
          <button
            type="submit"
            id="submitEdit"
            class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600"
          >
            Edit
          </button>
        </div>
      </form>
    </section>

    <!-- APP BODY ABOVE -->

    <!-- FOOTER BELOW -->
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
